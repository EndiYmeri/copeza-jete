<section>
  <div id='smooth-wrapper' class='container'>
    <div id='smooth-content' class='h-[300dvh]'>
      <div class='grid grid-cols-2'>
        <div class='place-content-center grid'>
          <video id='video' class='w-[500px]' src='/assets/video-short.mov' autoplay muted loop></video>
        </div>
        <div class='place-content-center grid'>
          <h2>Process</h2>
        </div>
      </div>
    </div>
    <div class='grid grid-cols-2'>
      <div class='place-content-center grid'>
        <video id='video2' class='w-[500px]' src='/assets/video-short.mov' autoplay muted loop></video>
      </div>
      <div class='place-content-center grid'>
        <h2>Process</h2>
      </div>
    </div>
  </div>
  <div class='grid grid-cols-2'>
    <div class='place-content-center grid'>
      <video id='video3' class='w-[500px]' src='/assets/video-short.mov' autoplay muted loop></video>
    </div>
    <div class='place-content-center grid'>
      <h2>Process</h2>
    </div>
  </div>
</section>

<script>
  import { gsap } from 'gsap'
  import { ScrollTrigger } from 'gsap/ScrollTrigger'
  import { ScrollSmoother } from 'gsap/ScrollSmoother'

  gsap.registerPlugin(ScrollTrigger, ScrollSmoother)

  ScrollSmoother.create({
    smooth: 2,
    effects: true,
    speed: 3,
    wrapper: '#smooth-wrapper',
    content: '#smooth-content'
  })

  ScrollTrigger.create({
    trigger: '#video',
    pin: true,
    start: 'center center',
    end: '+=1000'
  })
</script>
